<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="post_info">
      <%= image_tag @post.display_image if @post.image.attached? %>
      <p><%= @post.content %></p>
    </section>
  </aside>
  
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
  
</div>