<%= provide(:title, "Change Password")%>
<h1>Update your password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 user_edit">
    <%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%#= hidden_field_tag :email, @user.email %>
      
      <%#= f.label :password, "Old Password" %>
      <%#= f.password_field :password, class:"form-control" %>
      
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, class:"form-control" %>
      
      <%= f.label :password_confirmation, "Confirmation New Paasword" %>
      <%= f.password_field :password_confirmation, class:"form-control" %>
      
      <%= f.submit "Change password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>