<% provide(:title, "#{@user.username}さんの投稿") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
    <section class="comment">
      <%= @post.content %>
    </section>
  </aside>
  <aside class="col-md-8">
    <%= image_tag @post.display_image if @post.image.attached? %>
  </aside>
</div>




